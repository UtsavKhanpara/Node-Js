<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Budget Tracker System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      /* Finance/Money theme background */
      background: url('https://previews.123rf.com/images/pdreams/pdreams1209/pdreams120900021/15140369-money-gold-concept-illustartion-border-frame-isolated-on-black.jpg') no-repeat center center fixed;
      background-size: cover;
      position: relative;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      animation: fadeIn 1.5s ease-in-out;
    }

    /* Overlay for readability */
   

    .container {
      position: relative;
      z-index: 1;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 20px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.3);
      backdrop-filter: blur(10px);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .container:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 35px rgba(0,0,0,0.4);
    }

    h2 {
      font-weight: bold;
      color: #fff;
      animation: slideDown 1s ease;
      text-shadow: 2px 2px 8px rgba(0,0,0,0.6);
    }

    /* Input + Buttons */
    form input:focus {
      border-color: #2e7d32;
      box-shadow: 0 0 8px rgba(46,125,50,0.5);
    }

    form button {
      font-weight: bold;
      letter-spacing: 0.5px;
      transition: all 0.3s ease;
    }

    form button:hover {
      transform: scale(1.05);
      opacity: 0.9;
    }

    .btn-primary {
      background: linear-gradient(135deg, #2196f3, #64b5f6);
      border: none;
    }
    .btn-success {
      background: linear-gradient(135deg, #2e7d32, #66bb6a);
      border: none;
    }
    .btn-danger {
      background: linear-gradient(135deg, #c62828, #ef5350);
      border: none;
    }

    /* Info Boxes */
    .info-box {
      flex: 1;
      margin: 8px;
      border-radius: 15px;
      padding: 20px;
      text-align: center;
      font-weight: bold;
      font-size: 1.2rem;
      box-shadow: 0 6px 18px rgba(0,0,0,0.25);
      transition: all 0.3s ease;
      cursor: pointer;
      color: #fff;
    }

    .info-box span {
      font-size: 2rem;
      display: block;
      margin-bottom: 8px;
    }

    .info-box:hover {
      transform: scale(1.05) rotate(-1deg);
      box-shadow: 0 10px 25px rgba(0,0,0,0.3);
    }

    .bg-income { background: linear-gradient(135deg, #43a047, #66bb6a); }
    .bg-expense { background: linear-gradient(135deg, #e53935, #ef5350); }
    .bg-left { background: linear-gradient(135deg, #fdd835, #ffeb3b); color: #333 !important; }

    /* Table */
    .table {
      background: rgba(255,255,255,0.2);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 6px 18px rgba(0,0,0,0.25);
      animation: fadeInUp 1.2s ease;
      color: #fff;
    }

    .table thead {
      background: linear-gradient(135deg, #2e7d32, #66bb6a);
      color: #fff;
    }

    .table tbody tr:hover {
      background: rgba(76, 175, 80, 0.2); /* green tint */
      transform: scale(1.01);
    }

    /* Animations */
    @keyframes fadeIn { from {opacity: 0;} to {opacity: 1;} }
    @keyframes slideDown { from {transform: translateY(-50px); opacity: 0;} to {transform: translateY(0); opacity: 1;} }
    @keyframes fadeInUp { from {transform: translateY(50px); opacity: 0;} to {transform: translateY(0); opacity: 1;} }
  </style>
</head>
<body>

<div class="container mt-5 p-5">
  <h2 class="text-center mb-4">💰 Budget Tracker System</h2>

  <div class="row">
    <!-- Add Budget -->
    <div class="col-md-4">
      <form action="/add-budget" method="POST" class="mb-3">
        <label class="form-label fw-bold text-white">💵 Budget:</label>
        <input type="number" name="budget" class="form-control" placeholder="Enter budget amount" required>
        <button class="btn btn-primary w-100 mt-3">➕ Add Budget</button>
      </form>

      <!-- Add Expense -->
      <form action="/add-expense" method="POST">
        <label class="form-label fw-bold text-white">📝 Expense Title:</label>
        <input type="text" name="title" class="form-control" placeholder="e.g. Groceries" required>

        <label class="form-label fw-bold mt-3 text-white">💸 Amount:</label>
        <input type="number" name="amount" class="form-control" placeholder="e.g. 500" required>

        <button class="btn btn-success w-100 mt-3">➕ Add Expense</button>
      </form>

      <form action="/reset" method="POST" class="mt-3">
        <button class="btn btn-danger w-100">🔄 Reset All</button>
      </form>
    </div>

    <!-- Display Budget Info -->
    <div class="col-md-8">
      <div class="d-flex justify-content-between mb-4">
        <div class="info-box bg-income">
          <span>💵</span>
          Total Budget: <%= totalBudget %>
        </div>
        <div class="info-box bg-expense">
          <span>💸</span>
          Total Expenses: <%= totalExpenses %>
        </div>
        <div id="balanceBox" class="info-box bg-left">
          <span>✅</span>
          Budget Left: <%= budgetLeft %>
        </div>
      </div>

      <h4 class="mb-3 fw-bold text-white">📊 Expense History:</h4>
      <table class="table table-hover table-bordered text-center">
        <thead>
          <tr>
            <th>📌 Expense Name</th>
            <th>💲 Amount</th>
            <th>⚙️ Action</th>
          </tr>
        </thead>
        <tbody>
          <% expenses.forEach(exp => { %>
            <tr>
              <td><%= exp.title %></td>
              <td>₹ <%= exp.amount %></td>
              <td><a href="/remove/<%= exp.id %>" class="btn btn-danger btn-sm">❌ Remove</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

</body>
</html>
